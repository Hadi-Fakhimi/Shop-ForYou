@using Shop.Domain.ViewModels.Pageing
@model BasePageing


<div class="pagination-area">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @if (Model.StartPage < Model.PageId)
            {
                <li class="page-item">
                    <a class="page-link" href="/Admin/User/FilterRole?pageid=@(Model.PageId - 1)" aria-label="Next">Previous</a>
                </li>
            }
            @for (int i = Model.StartPage; i <= Model.EndPage; i++)
            {
                <li class="page-item @(Model.PageId == i ? "active" : "")"><a class="page-link" href="/Admin/User/FilterRole?pageid=@i">@i</a></li>
            }
            @if (Model.EndPage > Model.PageId)
            {
                <li class="page-item">
                    <a class="page-link" href="/Admin/User/FilterRole?pageid=@(Model.PageId + 1)" aria-label="Previous">Next</a>
                </li>
            }

        </ul>
    </nav>
</div>