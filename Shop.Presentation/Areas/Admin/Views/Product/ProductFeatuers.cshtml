@using Shop.Domain.Models.ProductEntities
@model List<ProductFeature>
@{
    ViewData["Title"] = "لیست ویژگی محصول";
}

<div class="row">
    <div class="col">
        <div class="card radius-10 mb-0">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div>
                        <h5 class="mb-1">لیست ویژگی محصول</h5>
                    </div>

                </div>

                <div class="table-responsive mt-3">
                    <table class="table align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>ویژگی</th>
                                <th>مقدار</th>
                                <th>عمل ها</th>
                            </tr>
                        </thead>

                        @if (Model != null && Model.Any())
                        {
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>@item.FeatureTitle</td>
                                        <td>@item.FeatureValue</td>
                                      
                                        <td>
                                            <div class="d-flex order-actions">
                                                <a asp-area="Admin" asp-controller="Product" asp-action="DeleteProductFeatuer" asp-route-productFeatuerId="@item.Id" class="ms-4 text-danger bg-light-danger border-0"><i class='bx bxs-trash'></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        }
                        else
                        {
                            <div class="d-flex align-items-center">
                                <div class="font-35 text-info">
                                    <i class="bx bx-info-square"></i>
                                </div>
                                <div class="ms-3">
                                    <h6 class="mb-0 text-info">هشدار اطلاع</h6>
                                    <div>آیتمی برای نمایش موجود نمی باشد</div>
                                </div>
                            </div>
                        }

                    </table>
                </div>

            </div>
        </div>
    </div>
</div><!--end row-->

