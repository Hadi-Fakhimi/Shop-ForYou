@using Shop.Domain.ViewModels.Admin.Products
@model CreateProductFeatuersViewModel
@{
    ViewData["Title"] = "افزودن ویژگی محصول";
}


@section Script {
    <partial name="_ValidationScriptsPartial"></partial>
}
<form method="post" asp-area="Admin" asp-controller="Product" asp-action="CreateProductFeatuer">
    <input asp-for="ProductId" type="hidden" />
    <div class="row">
        <div class="col-12 col-xl-8">
            <h6 class="mb-0 text-uppercase">@ViewData["Title"]</h6>
            <hr />
            <div class="card">
                <div class="card-body">

                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control input-group mb-3" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <br />

                    <div class="form-group">
                        <label asp-for="Value" class="control-label"></label>
                        <input asp-for="Value" class="form-control input-group mb-3" />
                        <span asp-validation-for="Value" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">ایجاد ویژگی</button>
                    </div>

                </div>
            </div>

        </div>

    </div>
</form>

