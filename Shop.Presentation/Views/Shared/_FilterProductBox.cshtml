@using Shop.Application.StaticTools
@model List<Shop.Domain.ViewModels.Site.Products.ProductItemViewModel>

@if (Model != null && Model.Any())
{
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-3 col-xs-12 order-1 d-block mb-3">
            <section class="product-box product product-type-simple">
                <div class="thumb">
                    <a href="#" class="d-block">
                        <div class="product-rate">
                            
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="fa fa-star @(4 > i ? "active" : "")"></i>
                            }

                        </div>
                        <img src="@(PathsExtensions.ImageProductOrigin + product.ProductImageName)">
                    </a>
                </div>
                <div class="title">
                    <a href="#">@product.ProductName</a>
                </div>
                <div class="price">
                    <span class="amount">
                        @product.Price.ToString("#,0")
                        <span>تومان</span>
                    </span>
                </div>
            </section>
        </div>
    }
}