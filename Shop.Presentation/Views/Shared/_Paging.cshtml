@using Shop.Domain.ViewModels.Pageing
@model BasePageing

<div class="pagination-product">
    <nav aria-label="Page navigation example">
        <ul class="pagination">


            @if (Model.StartPage < Model.PageId)
            {
                <li class="page-item">
                    <a class="page-link" onclick="FillPageId(@Model.PageId - 1)" aria-label="Next">Previous</a>

                    <span aria-hidden="true">«</span>
                </li>
            }
            @for (int i = Model.StartPage; i <= Model.EndPage; i++)
            {
                <li class="page-item @(Model.PageId == i ? "active" : "")"><a class="page-link" onclick="FillPageId(@i)">@i</a></li>
            }

            @if (Model.EndPage > Model.PageId)
            {

                <li class="page-item">
                    <a class="page-link" onclick="FillPageId(@Model.PageId + 1)" aria-label="Next">
                        <span aria-hidden="true">»</span>
                    </a>
                </li>
            }

        </ul>
    </nav>
</div>